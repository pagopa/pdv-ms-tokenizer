{
  "openapi": "3.0.3",
  "info": {
    "title": "pdv-ms-tokenizer",
    "description": "Tokenizer API documentation",
    "version": "1.0-SNAPSHOT"
  },
  "servers": [
    {
      "url": "http://localhost:80",
      "description": "Inferred Url"
    }
  ],
  "tags": [
    {
      "name": "token",
      "description": "Token operations"
    }
  ],
  "paths": {
    "/tokens": {
      "put": {
        "tags": [
          "token"
        ],
        "summary": "Upsert token",
        "description": "Create a new token given a PII and Namespace, if already exists do nothing",
        "operationId": "saveUsingPUT",
        "parameters": [
          {
            "name": "x-pagopa-namespace",
            "in": "header",
            "description": "Caller visibility context",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PiiResource"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResource"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/tokens/search" : {
      "post" : {
        "tags": [
          "token"
        ],
        "summary": "Search token",
        "description": "Search a token given a PII and Namespace",
        "operationId": "searchUsingPOST",
        "parameters": [
          {
            "name": "x-pagopa-namespace",
            "in": "header",
            "description": "Caller visibility context",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PiiResource"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/TokenResource"
                }
              }
            }
          },
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    },
    "/tokens/{token}/pii" : {
      "get" : {
        "tags": [
          "token"
        ],
        "summary": "Find PII",
        "description": "Find a PII given a token",
        "operationId": "findPiiUsingGET",
        "parameters": [
          {
            "name": "token",
            "in": "path",
            "description": "Token related to the PII",
            "required": true,
            "style": "simple",
            "schema": {
              "type": "string",
              "format": "uuid"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/PiiResource"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "404": {
            "description": "Not Found"
          }
        }
      }
    }
  },
  "components" : {
    "schemas" : {
      "PiiResource" : {
        "title": "PiiResource",
        "required": [
          "pii"
        ],
        "type": "object",
        "properties": {
          "pii": {
            "type": "string",
            "description": "Personal Identifiable Information"
          }
        }
      },
      "TokenResource" : {
        "title": "TokenResource",
        "required": [
          "rootToken",
          "token"
        ],
        "type": "object",
        "properties": {
          "rootToken": {
            "type": "string",
            "description": "Root token related to the PII",
            "format": "uuid"
          },
          "token": {
            "type": "string",
            "description": "Namespaced token related to the PII",
            "format": "uuid"
          }
        }
      }
    }
  }
}